{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "name": "Grocery",
    "description": "Grocery",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for a fruit",
            "type": "integer"
        },
        "name": {
            "description": "Name of the fruit",
            "type": "string"
        },
        "price": {
		    "description": "Price of the fruit",
            "type": "string"

        }
    },
    "required": ["id", "name", "price"]
}